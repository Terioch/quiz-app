@model QuizApp.Models.Question

@{
    ViewData["Title"] = "Question";
}

<div class="card bg-light">
    <form asp-action="Question" asp-route-id="@Model.Id">
        <div class="card-header">
            <h4>@Model.Name</h4>
        </div>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <ul class="list-group">
                @foreach (var option in Model.Options)
                {
                    <li class="list-group-item d-flex">
                        <div style="margin-right: 5px">
                            <div class="form-group form-check">
                                @Html.RadioButton("selectedOptionId", option.Id)                                
                            </div>
                        </div>
                        <div>
                            <small class="text-secondary">@option.Name</small>
                        </div>
                    </li>
                }
            </ul>        
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Next Question</button>
        </div>
    </form>    
</div>


